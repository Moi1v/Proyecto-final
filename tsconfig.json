{   
    "compilerOptions": {
        "module": "commonjs",
        "target": "es6",
        "lib": ["es6", "ES2021", "DOM"],
        "sourceMap": true,
        "outDir": "./build/src/index",
        "strict": true,
        "moduleResolution": "node",
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true,
        "noImplicitThis": false
    },
    "exclude": ["node_modules"],
    "include": ["./src/**/*"]
}
